<ul class="ulCategories" style="position: relative;">
    <button onclick="showNewCategory()">Создать категорию</button>
    <form id="newCategory" method="POST" action="/category/create" class="hidden">
        <input type="text" name="newCategoryName" required>
        <input type="submit">
    </form>
    {{#each categories}}
        <li class="liCategories category colorSection colorDarkLink">
            <a class="category-link colorTextDark"
               href="/category/{{this.id}}">{{this.name}}</a>
        </li>
    {{/each}}
</ul>

<script>
    const showNewCategory = () => document.getElementById('newCategory').classList.toggle('hidden')
</script>

<div class="newAnswer">
    <div class="profile" style="margin-top: -2%; margin-left: 0%;">
        <img src="https://postal.ninja/assets/images/48981817022dda35bf548590be816d60-logo-100x100.png" alt="No avatar"
             height="100" width="100">
        <div class="link colorDarkLink colorTextDark" href="#">{{user.username}}</div>
    </div>
    <form action="" method="post" id="answerForm">
        <textarea placeholder="Ваш ответ" name="myAnswer" id="myAnswer" required></textarea>
        <div class="marginButton">
            <input id="postAnswerButton" class="borderTop myButton colorDarkLink colorSection" type="image"
                   src="/static/images/send.png" height="60">
        </div>
    </form>
</div>
<!--href="/post/{{this.id}}"-->
<div class="selectedTheme colorMain">
    <h2 class="categoryHeader colorTextLight">Category: {{this.category_name}}</h2>
    <ul class="ulPosts">
    {{#each posts}}
        <li class="answer colorSection">
            <div class="profile">
                <img src="https://postal.ninja/assets/images/48981817022dda35bf548590be816d60-logo-100x100.png" alt="No avatar" height="100" width="100">
                <div class="profileName link colorDarkLink" href="#">{{this.author_name}}</div>
            </div>
            <div class="answerText">{{this.title}}</div>
            <div class="voteField">
                <a href="/post/{{this.id}}"><input type="image" class="replyImage vote colorDarkLink myButton colorSection" src="/static/images/reply.png" alt="#"/></a>
                <div class="voteCounter colorMain colorTextLight">156</div>
            </div>
        </li>
    {{/each}}
    </ul>

    <div class="newAnswer">
        <div class="myAvatar profile">
            <img src="https://postal.ninja/assets/images/48981817022dda35bf548590be816d60-logo-100x100.png" alt="No avatar" height="100" width="100">
            <div class="profileName link colorDarkLink colorTextLight" href="#">My_nickname</div>
        </div>
        <textarea placeholder="Add new theme" name="myAnswer" class="myAnswer"></textarea>
        <p><input class="borderTop myButton colorDarkLink colorSection" type="image" src="/static/images/send.png" height="60"></p>
    </div>
</div>